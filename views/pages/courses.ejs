<%- include("../partials/head") %>

<h1 class="m-2 text-3xl font-bold">Your Courses</h1>
<div class="">
  <% courses.forEach((course) => { %>
  <div class="m-2 p-2 border-gray-600 border-2 rounded-lg max-w-md h-44 ">
		<div class="mb-2">
			<h2 class="text-2xl font-bold hover:underline"><%= course.name %></h2>
			<h3 class="text-lg hover:underline"><%= course.teacher.profile.name.fullName %></h5>
			<div class="relative">
				<hr class="border-1 border-gray-600 my-3" />
		  	<img src="<%= 'https:' + course.teacher.profile.photoUrl %>" class="absolute rounded-full top-1/2 -translate-y-1/2 right-5 w-32 h-32" alt="profile pic" referrerpolicy="no-referrer" />
			</div>
			<h3 class="text-lg"><%= course.descriptionHeading %></h5>
			<h3 class="text-lg"><%= course.description %></h5>
		</div>
    <a class="text-lg text-white bg-blue-500 p-2 mt-2 rounded-sm" href="<%= course.alternateLink %>" target="_blank">Go To Class</a>
  </div>
  <% }) %>
</div>